@model List<NetPress.Domain.Entities.Post>
@{
    int.TryParse(ViewData["ColPerRow"]?.ToString(), out int colPerRow);
}

@for (int i = 0; i < Model.Count; i += colPerRow)
{
    @Html.Raw("<div class=\"row mt-4\">")
    for (int j = i; j < i + colPerRow; j++)
    {
        if (j < Model.Count)
        {
            <partial name="_PostCard" model="Model[j]" />
        }
    }
    @Html.Raw("</div>")
}
